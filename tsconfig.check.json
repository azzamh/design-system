{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "skipLibCheck": true,
    "types": [
      "vitest",
      "vite/client",
      "jest-extended",
      "interactjs"
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.bench.ts",
    "**/__mocks__/**",
    "coverage",
    "dist",
    ".nuxt"
  ]
}
